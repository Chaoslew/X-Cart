{##
 # Invoice billing address
 #
 # @ListChild (list="invoice.bottom.address.billing", weight="10")
 #}
<strong style="color: #000;font-size: 20px;font-weight: normal;padding-bottom: 3px;">{{ t('Billing address') }}</strong>
{% if this.baddress %}
  <table style="border: none; border-collapse: collapse; margin: 0;background: #f9f9f9;width: 100%; max-width: 700px;">
    {% for idx, field in this.getAddressSectionData(this.baddress) %}
    {% if this.getAddressFiledTemplate('b', idx, field) %}
      {{ widget(template=this.getAddressFiledTemplate('b', idx, field), field=field) }}
    {% endif %}
    {% endfor %}
  </table>
{% endif %}
<p style="line-height: 18px;padding-top: 0;margin: 0;font-size: 14px;margin-left:0px;padding-left:0px;">
  <span>{{ t('E-mail') }}</span>:
  <a style="font-size: 14px;color: #000;" href="mailto:{{ this.order.profile.login }}">{{ this.order.profile.login }}</a>
</p>
