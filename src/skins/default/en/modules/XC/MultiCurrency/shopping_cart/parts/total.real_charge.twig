 # Shopping cart subtotal
 #
 # @ListChild (list="cart.panel.totals", weight="35")
 #}
{% if not this.isDefaultMultiCurrencySelected() %}
  <li class="subtotal">
    <strong>{{ t('Total charge') }}:</strong>
    {{ widget('XLite\\View\\Surcharge', surcharge=this.cart.getTotal(), currency=this.cart.getCurrency(), noConversion='true') }}
  </li>
{% endif %}
{% if not this.isDefaultMultiCurrencySelected() %}
  <li class="subtotal">
    {{ widget('XLite\\Module\\XC\\MultiCurrency\\View\\RealChargeWarning', order=this.cart) }}
  </li>
{% endif %}